<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <form class="uk-form-stacked uk-text-left" action="/updatePoi/{{poi._id}}" method="POST">
    <div class="uk-grid uk-grid-stack">
      <div class="uk-width-2-2@m">
        <div class="uk-margin">
          <label class="uk-form-label" for="form-stacked-text">Update the POIs Name and Description</label>
          <input class="uk-input" id="form-stacked-text" type="text" name="name" value="{{poi.name}}" />
        </div>
        <div class="uk-margin">
          <label class="uk-form-label" for="form-stacked-text">Update the Description</label>
          <textarea class="uk-textarea" rows="5" id="form-stacked-text" name="description"
                    placeholder="Description">{{poi.description}}</textarea>
        </div>
        <div>
          <label class="uk-form-label" for="form-stacked-text">Update the POIs Latitude</label>
          <input class="uk-input" id="form-stacked-text" type="text" name="latitude" value="{{poi.latitude}}" />
        </div>
        <div>
          <label class="uk-form-label" for="form-stacked-text">Update enter the POIs Longitude</label>
          <input class="uk-input" id="form-stacked-text" type="text" name="longitude" value="{{poi.longitude}}" />
        </div>
        <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
          <div class="uk-margin uk-width-1-1">
            <h3>Leave a Comment</h3>
            <form class="uk-form uk-text-left" action="/add-comment/{{poi._id}}" method="POST"
                  enctype="multipart/form-data">
              <div class="">
                <div class="uk-margin">
                  <div class="uk-form-controls">
                    <label for="desc-text"></label><textarea class="uk-input" id="desc-text" name="comment" rows="5"
                                                             placeholder="Type Comment here..."></textarea>
                  </div>
                  <div class="">
                    <div class=" uk-width-2-2@m">
                      <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">&nbsp;</label>
                        <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Update POI
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>